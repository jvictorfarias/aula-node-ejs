<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/head.ejs') %>
  <title>Câmara dos Deputados</title>
</head>

<body>
  <header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark cyan scrolling-navbar"
      style="justify-content: center; min-height: 180px;">
      <a class="navbar-brand" href="/"><strong>Câmara dos Deputados</strong></a>
    </nav>
  </header>

  <main class="container" style="margin-top: 280px;">
    <div class="jumbotron">
      <h1>Aplicação da Câmara dos Deputados</h1>
      <form action="/" method="GET">
        <div class="md-form active-cyan active-cyan-2 mb-3">
          <input class="form-control" type="text" placeholder="Procure por deputados" name="search" aria-label="Search">
          <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
      </form>
    </div>

    <div class="container">
      <div class="row row-cols-1 row-cols-md-3">
        <% deputados.forEach(deputado => { %>
        <div class="col mb-4">
          <div class="card">
            <div class="view overlay" style="display: flex;align-items: center; justify-content: center;">
              <img class="card-img" src="<%= deputado.urlFoto %>" alt="<%= deputado.nome %>"
                style="max-width: 280px; max-height: 340px; min-width: 280px; min-height: 340px;">
              <div class="mask rgba-white-slight"></div>
              </a>
            </div>
            <div class="card-body">
              <h4 class="card-title"><%= deputado.nome %> </h4>
              <p class="card-text">
              <ul>
                <li>Partido: <%= deputado.siglaPartido %> </li>
              </ul>
              </p>
              <form action="/info/<%= deputado.id %>" method="GET">
                <button type="submit" class="btn btn-primary">Detalhes</button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </main>
  <%- include('../partials/scripts.ejs') %>
</body>

</html>